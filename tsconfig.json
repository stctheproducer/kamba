{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "#audit_resolvers/*": ["./app/audit_resolvers/*.js"],
      "#utils/*": ["./app/utils/*.js"],
      "#emails/*": ["./app/emails/*.js"],
      "#drivers/*": ["./app/drivers/*.js"],
      "@/*": ["./inertia/*"]
    }
  },
  "exclude": [
    "./inertia/**/*",
    "node_modules",
    "build",
    ".react-email",
    "resources/emails",
    "v0-generated-code"
  ]
}
